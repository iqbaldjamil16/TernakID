rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read and write access to individual documents
    match /livestock/{livestockId} {
      allow get, write: if true;
    }

    // Explicitly allow anyone to list the entire collection
    match /livestock {
      allow list: if true;
    }
  }
}
