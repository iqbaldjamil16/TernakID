{
  "entities": {
    "Livestock": {
      "title": "Livestock",
      "description": "Represents a single livestock animal.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the livestock." },
        "name": { "type": "string", "description": "Name of the livestock." },
        "regId": { "type": "string", "description": "Registration ID." },
        "breed": { "type": "string" },
        "gender": { "type": "string", "enum": ["Jantan", "Betina"] },
        "status": { "type": "string" },
        "owner": { "type": "string" },
        "address": { "type": "string" },
        "birthDate": { "type": "string", "format": "date-time" },
        "photoUrl": { "type": "string", "format": "uri" },
        "healthLog": {
          "type": "array",
          "items": { "$ref": "#/entities/HealthRecord" }
        },
        "reproductionLog": {
          "type": "array",
          "items": { "$ref": "#/entities/ReproductionRecord" }
        },
        "growthRecords": {
          "type": "array",
          "items": { "$ref": "#/entities/GrowthRecord" }
        },
        "pedigree": { "$ref": "#/entities/Pedigree" }
      },
      "required": ["id", "name", "regId", "breed", "gender", "status", "owner", "address", "birthDate"]
    },
    "HealthRecord": {
      "title": "Health Record",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "type": { "type": "string" },
        "detail": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["date", "type", "detail"]
    },
    "ReproductionRecord": {
      "title": "Reproduction Record",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "type": { "type": "string" },
        "detail": { "type": "string" },
        "notes": { "type": "string" }
      },
      "required": ["date", "type", "detail"]
    },
    "GrowthRecord": {
      "title": "Growth Record",
      "type": "object",
      "properties": {
        "date": { "type": "string", "format": "date-time" },
        "weight": { "type": "number" }
      },
      "required": ["date", "weight"]
    },
    "Pedigree": {
      "title": "Pedigree",
      "type": "object",
      "properties": {
        "dam": { "$ref": "#/entities/Dam" },
        "sire": { "$ref": "#/entities/Sire" }
      }
    },
    "Dam": {
      "title": "Dam",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "regId": { "type": "string" },
        "breed": { "type": "string" },
        "offspring": { "type": "number" }
      }
    },
    "Sire": {
      "title": "Sire",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "semenId": { "type": "string" },
        "breed": { "type": "string" },
        "characteristics": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/livestock/{livestockId}": {
      "schema": { "$ref": "#/entities/Livestock" },
      "description": "Public collection of all livestock data. Open to all users."
    }
  }
}
